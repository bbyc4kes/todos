{
	"compilerOptions": {
		"jsx": "react",
		"baseUrl": ".",
		"module": "ES2022",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2022",
		"sourceMap": true,
		"outDir": "./dist",
		"incremental": true,
		"useDefineForClassFields": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"composite": true,
		"types": [
			"vite/client"
		],
		"paths": {
			"~modules/*": [
				"src/modules/*"
			],
			"~router/*": [
				"src/router/*"
			],
			"~shared/*": [
				"src/shared/*"
			],
			"~store/*": [
				"src/store/*"
			],
			"~typings/*": [
				"src/typings/*"
			],
			"~pages/*": [
				"src/pages/*"
			],
			"~dashboard/*": [
				"src/pages/dashboard/*"
			],
			"~todo/*": [
				"src/pages/todo/*"
			],
			"~todo-list/*": [
				"src/pages/todo-list/*"
			],
			"~not-found/*": [
				"src/modules/not-found/*"
			],
			"~/*": [
				"src/*"
			],
			"~components/*": [
				"src/components/*"
			],
			"~hooks/*": [
				"src/shared/hooks/*"
			],
			"~assets/*": [
				"src/assets/*"
			],
			"~utils/*": [
				"src/shared/utils/*"
			],
			"~layouts/*": [
				"src/shared/layouts/*"
			]
		}
	},
	"include": [
		"./src/**/*",
		"./vite.config.ts",
		".eslintrc.cjs"
	],
	"exclude": [
		"./node_modules",
		"test",
		"./dist",
		"**/*spec.ts"
	]
}